<!-- Lines with hardcoded values for future testing -->
<mvc:View controllerName="my.sapui5.act04.training.act04mvc.controller.view04"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" floatingFooter="true">
    <VBox id="idVBox" class="sapUiSmallMargin">
        <f:SimpleForm id="idSimpleForm" editable="true" layout="ResponsiveGridLayout" title="Details" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
            <f:content>
                <!-- <Label id="idLblFName" text="First Name" /> -->
                <Label id="idLblFName" text="{i18n>firstNameLbl}" />
                <Input id="idInptFName" value="" />
                <!-- <Label id="idLblLName" text="Last Name" /> -->
                <Label id="idLblLName" text="{i18n>lastNameLbl}" />
                <Input id="idInptLName" value="" />
                <!-- <Label id="idLblMOP" text="Mode of Payment" /> -->
                <Label id="idLblMOP" text="{i18n>modeOfPayment}" />
                <Select id="idSelMOP" forceSelection="false" change="onChangeMOP">
                    <items>
                        <!-- <core:Item id="idItmCOD" text="Cash on Delivery" key="COD"/> -->
                        <core:Item id="idItmCOD" text="{i18n>cashOnDelivery}" key="COD"/>
                        <!-- <core:Item id="idItmCC" text="Credit Card" key="CC"/> -->
                        <core:Item id="idItmCC" text="{i18n>creditCard}" key="CC"/>
                        <!-- <core:Item id="idItmGCash" text="GCash" key="GCASH"/> -->
                        <core:Item id="idItmGCash" text="{i18n>gCash}" key="GCASH"/>
                    </items>
                </Select>
                <!-- <Label id="idLblPhone"   text="Mobile Number" visible="false"/> -->
                <Label id="idLblPhone" text="{i18n>mobileNo}" visible="false"/>
                <!-- <Input id="idInputPhone" value="" visible="false"/> -->
                 <Input id="idInputPhone" value="" visible="false"/>

                 <!-- Additional Credit Card details -->
                <Label id="idLblcvv"   text="{i18n>ccCVV}" visible="false"/>
                <Input id="idInputcvv" value="" visible="false"/>                
                 <!-- Additional Credit Card details -->
                <!-- <Label id="idLblAddCc"  text="Credit Card No." visible="false"/> -->
                <!-- <Input id="idInptAddCc" value="" visible="false"/> -->
            </f:content>
        </f:SimpleForm>

        <Table id="idTableSCart" inset="false">
            <headerToolbar>
                <OverflowToolbar id="idOFT">
                    <content>
                        <!-- <Title id="idTableTitleSCart" text="Shopping Cart"/> -->
                        <Title id="idTableTitleSCart" text="{i18n>shoppingCart}"/>
                        <ToolbarSpacer id="idTSpacer"/>
                        <!-- <Button id="idBtnAddItems" icon="sap-icon://cart-4" tooltip="Add to Cart" press="onAddItem"/> -->
                        <Button id="idBtnAddItems" icon="sap-icon://cart-4" tooltip="{i18n>addToCartTooltip}" press="onAddItem"/>
                    </content>
                </OverflowToolbar>
            </headerToolbar>
                <columns>
                    <Column id="idCol1">
                        <!-- <Text id="idColText1" text="Item" /> -->
                        <Text id="idColText1" text="{i18n>item}" />
                    </Column>
                    <Column id="idCol2">
                        <!-- <Text id="idColText2" text="Quantity" /> -->
                        <Text id="idColText2" text="{i18n>qty}" />
                    </Column>
                    <Column id="idCol3">
                        <!-- <Text id="idColText3" text="Price" /> -->                        
                        <Text id="idColText3" text="{i18n>price}" />
                    </Column>
                </columns>
            <items>
                <ColumnListItem id="idColListItem1" vAlign="Middle">
                    <cells>
                        <!-- <Text id="idText1" text="iPhone 14 Pro Max" /> -->
                        <Text id="idText1" text="{i18n>iPhone}" />
                        <!-- <Text id="idText2" text="2" /> -->
                         <Text id="idText2" text="{i18n>qtyTwo}" />
                        <!-- <Text id="idText3" text="$2000" /> -->
                        <Text id="idText3" text="{i18n>price2}" />
                    </cells>
                </ColumnListItem>
                <ColumnListItem id="idColListItem2" vAlign="Middle">
                    <cells>
                        <!-- <Text id="idText4" text="Louis Vuitton Speedy" /> -->
                        <Text id="idText4" text="{i18n>lvSpeedy}" />
                        <!-- <Text id="idText5" text="1" /> -->
                        <Text id="idText5" text="{i18n>qtyOne}" />
                        <!-- <Text id="idText6" text="$14000" /> -->
                        <Text id="idText6" text="{i18n>price14}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
    <footer>
        <OverflowToolbar id="idOFTFooter">
            <ToolbarSpacer id="idTSpacerFooter"/>
            <!-- <Button id="idBtnCheckout" text="Check Out" tooltip="Check Out" press="onPressCheckout" /> -->
            <Button id="idBtnCheckout" text="{i18n>checkOut}" tooltip="{i18n>checkOut}" press="onPressCheckout"/>
        </OverflowToolbar>
    </footer>
</Page>
</mvc:View>